


<h1>Sign up</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>


  <%= form_with(model: @user, local: true) do |f| %>
  <div class="login-form">
    <p>
      <%= f.label :name %>
      <span id="name"><%= f.text_field :name %></span>
    </p>

  <p>
    <%= f.label :email %>
      <span id="email"><%= f.email_field :email %></span>
  </p>

  <p>
    <%= f.label :password %>
      <span id="password"><%= f.password_field :password %></span>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <span id="confirm"><%= f.password_field :password_confirmation %></span>
  </p>
  <p>
    <%= f.submit "Create my account" %>
  </p>
  <p>
    <%= link_to "If you have an account,Click here", new_session_path,class:"btn btn-info" %>
  </p>
  </div>

  <% end %>
